/***
"Product" magma

A "prod" magma ''M'' is an abelian magma with ''x * y'' meaning ''M.prod x y''
where ''M.prod'' is the operation of the magma.
***/

type MagmaProd : MagmaAbelian as M {
  alias prod := op

  with (x y : M.InSet)
  parse "{x} * {y}" as (prod x y)
}


type OrderedMagmaProd      : MagmaProd + OrderedMagma
type TotalOrderedMagmaProd : MagmaProd + TotalOrderedMagma
